                        print()
                        print(f"Tentativas restantes: {tentativas}")

                    if "_" not in estado3:
                        print()
                        print("\tRESULTADO")
                        score += 50
                        if score == 150:
                            print("\nParabéns, você acertou todas as palavras!")
                            print(f"Score final: {score}")
                            print()
                        if score == 100:
                            print("\nVocê acertou 2/3 das palavras! Foi quase hein?")
                            print(f"Score final: {score}")
                            print()
                        if score == 50:
                            print("\nVocê acertou 1/3 das palavras! Mais sorte da próxima vez!")
                            print(f"Score final: {score}")
                            print()

                    else:
                        print(f"\nVocê perdeu! A palavra era: {p3}") 
                        score += 0
                        if score == 100:
                            print("\nVocê acertou 2/3 das palavras! Foi quase hein?")
                            print(f"Score final: {score}")
                            print()
                        if score == 50:
                            print("\nVocê acertou 1/3 das palavras! Mais sorte da próxima vez!")
                            print(f"Score final: {score}")
                            print()
