                                print("\t\t\t\t/|\\")
                            elif tentativas == 1:
                                print("\t\t\t\t O")
                                print("\t\t\t\t/|\\")
                                print("\t\t\t\t/")
                            elif tentativas == 0:
                                print("\t\t\t\t O")
                                print("\t\t\t\t/|\\")
                                print("\t\t\t\t/\\")

                                print("Enforcado!")

