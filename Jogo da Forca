                            print()
                            tentativas -= 1

                            print("\t\t\t--------")
                            if tentativas == 3:
                                print("\t\t\t\t O")
                                print("\t\t\t\t |")
                            elif tentativas == 2:
                                print("\t\t\t\t O")
                                print("\t\t\t\t/|\\")
                            elif tentativas == 1:
                                print("\t\t\t\t O")
                                print("\t\t\t\t/|\\")
                                print("\t\t\t\t/")
                            elif tentativas == 0:
                                print("\t\t\t\t O")
                                print("\t\t\t\t/|\\")
                                print("\t\t\t\t/\\")

                                print("Enforcado!")                          

                        for letra in estado3:  
                            print(letra, end=" ")
                        print()
                        print(f"Tentativas restantes: {tentativas}")

                    if "_" not in estado3:
                        print()
                        print("\tRESULTADO")
                        score += 250
                        if score == 750:
                            print("Parabéns, você acertou todas as palavras!")
                            print(f"Score final: {score}")
                            print()
