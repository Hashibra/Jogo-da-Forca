                                print("\t\t\t\t O")
                                print("\t\t\t\t/|")
                            elif tentativas == 2:
                                print("\t\t\t\t O")
                                print("\t\t\t\t/|\\")
                            elif tentativas == 1:
                                print("\t\t\t\t O")
