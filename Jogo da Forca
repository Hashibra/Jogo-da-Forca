print("\n\tJOGO DA FORCA\t\n")

while True:
    print("Bem vindo(a) ao Jogo da Forca!\n")
    print("\tMENU INICIAL\n [1] Iniciar\n [2] Regras\n [3] Créditos\n\n [4] Sair\n")

    opcao = input("Digite a opção desejada: ")
    print()

    if opcao == "1":
        dificuldade = 0
        while dificuldade != 5:
            print("\tMENU DE DIFICULDADES\n [1] Fácil\n [2] Normal\n [3] Difícil\n [4] Extrema\n\n [5] Voltar ao menu inicial\n")
            dificuldade = input("Digite a dificuldade desejada: ")
            print()

            if dificuldade == "1":
                print("Você selecionou a dificuldade fácil!")
                confirm = input("Começar? ([1] Sim / [2] Não): ")
                print()

                if confirm == "1":
                    score = 0
                    p1 = "bola"

                    # 1° PALAVRA (FÁCIL)
                    print("\tPrimeira palavra")
                    estado1 = ["_"] * len(p1)
                    for letra in estado1:
                        print(letra, end=" ")
                    print()

                    tentativas = 6

                    while tentativas > 0 and "_" in estado1:
                        adivinhar = input("Insira uma letra: ").lower()
                        print()
                        if len(adivinhar) != 1 or not ('a' <= adivinhar <= 'z'):
                            print("Opção Inválida! Digite apenas UMA letra de A a Z.")
                            continue

                        if adivinhar in p1:
                            print("Você acertou!")
                            print()
                            for a in range(len(p1)):
                                if p1[a] == adivinhar:
                                    estado1[a] = adivinhar
                        else:
                            print("Letra incorreta!\n")
                            print()
                            tentativas -= 1

                            print("\t\t\t--------")
                            if tentativas == 5:
                                print("\t\t\t\t O")
                            elif tentativas == 4:
                                print("\t\t\t\t O")
                                print("\t\t\t\t |")
                            elif tentativas == 3:
                                print("\t\t\t\t O")
                                print("\t\t\t\t/|")
                            elif tentativas == 2:
                                print("\t\t\t\t O")
                                print("\t\t\t\t/|\\")
                            elif tentativas == 1:
                                print("\t\t\t\t O")
                                print("\t\t\t\t/|\\")
                                print("\t\t\t\t/")
                            elif tentativas == 0:
                                print("\t\t\t\t O")
                                print("\t\t\t\t/|\\")
                                print("\t\t\t\t/\\")

                                print("Enforcado!")

                        for letra in estado1:
                            print(letra, end=" ")
                        print()
                        print(f"Tentativas restantes: {tentativas}")

                    if "_" not in estado1:
                        print("\nVocê acertou a palavra!")
                        score += 50
                        print(f"Score: {score}")
                        print()
                    
                    else:
                        print(f"\nVocê perdeu! A palavra era: {p1}")
                        score -= 0
                        print(f"Score: {score}")
                        print()
                    
                    voltar = ""
                    while voltar != "1" and voltar != "2":  
                        voltar = input("Deseja continuar para a próxima palavra ([1] Sim / [2] Não): ")
                        print()

                        if voltar != "1" and voltar != "2":  
                            print("Tente novamente.")

                    if voltar == "2":
                        continue  


                    # 2° PALAVRA (FÁCIL)
                    p2 = "tela"
                    print("\tSegunda palavra")  
                    estado2 = ["_"] * len(p2)  
                    for letra in estado2:  
                        print(letra, end=" ")
                    print()

