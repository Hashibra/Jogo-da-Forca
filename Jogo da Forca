                                if p1[a] == adivinhar:
                                    estado1[a] = adivinhar
                        else:
                            print("Letra incorreta!\n")
                            print()
                            tentativas -= 1

                            print("\t\t\t--------")
                            if tentativas == 2:
                                print("\t\t\t\t O")
                                print("\t\t\t\t/|\\")
