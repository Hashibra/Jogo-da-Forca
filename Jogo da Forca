                            print(letra, end=" ")
                        print()
                        print(f"Tentativas restantes: {tentativas}")

                    if "_" not in estado2: 
                        print("\nVocê acertou a palavra!")
                        score += 50
                        print(f"Score: {score}")
                        print()
                    else:
                        print(f"\nVocê perdeu! A palavra era: {p2}")  
                        score -= 0
                        print(f"Score: {score}")
                        print()

